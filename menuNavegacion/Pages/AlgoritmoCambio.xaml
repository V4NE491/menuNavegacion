<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menuNavegacion.Pages.AlgoritmoCambio"
             Title="AlgoritmoCambio">
    <VerticalStackLayout Padding="40">

        <Label Padding="10" Text="Algoritmo Que Calula El Cambio De Un Cliente" 
               HorizontalTextAlignment="Center"/>
       
        <Entry x:Name="entryPrecio" Placeholder="Digite el precio del producto" />
        <Entry x:Name="entryDinero" Placeholder="Digite el dinero dado por el cliente" />
     
        <Label Padding="10" x:Name="labelCambio" Text="Aqui se mostrara el cambio del cliente" TextColor="Gray"/>
        
        <Button Text="Tocar para obtener el cambio de un cliente" 
                BackgroundColor="LightCoral" TextColor="Black"
                Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>