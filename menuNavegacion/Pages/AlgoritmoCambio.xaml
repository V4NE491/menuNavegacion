<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menuNavegacion.Pages.AlgoritmoCambio"
             Title="AlgoritmoCambio">

    <NavigationPage.TitleView>
        <Slider HeightRequest="44"
                WidthRequest="300"/>
    </NavigationPage.TitleView>
    <VerticalStackLayout Padding="40">

        <Label Text="Algoritmo Que Calula El Cambio De Un Cliente" />
        <Entry x:Name="entryPrecio" Placeholder="Digite el precio del producto" />
        <Entry x:Name="entryDinero" Placeholder="Digite el dinero dado por el cliente" />
        <Label x:Name="labelCambio" Text="Aqui se mostrara el cambio del cliente" TextColor="Gray"/>
        <Button Text="Tocar para obtener el cambio de un cliente" 
                BackgroundColor="LightCoral" TextColor="Black"
                Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>